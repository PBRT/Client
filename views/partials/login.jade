link(rel='stylesheet', href='/css/login.css')

.swiper-container(swipable)
    .row
        .col-xs-12(style='text-align:center')
            a.tab(ng-class='{"active-tab": activeIndex==0}',ng-click="goToSignUp()") Sign-In
            h2.tab(style='margin-left:5%; margin-right:5%')  |
            a.tab(ng-class='{"active-tab": activeIndex==1}', ng-click='goToSignIn()') Sign-Up
        br
    br
    .swiper-wrapper
        .swiper-slide
            .swiper-inner
                .container-fluid
                    //.row(style='margin-bottom: 30px')
                        .col-xs-8.col-xs-offset-2.col-md-4.col-md-offset-4
                            img.img-responsive(src='/css/win-white.png' )
                    .row
                        form.form-horizontal(style="text-align: center",ng-submit='loginUser()', role='form')
                            .form-group
                                //label.control-label.col-md-3.hidden-xs Username
                                .col-xs-6.col-xs-offset-3
                                    input.form-control(type='text', name='username', tabindex="1",ng-model="user.username", placeholder="Username", id='user-username')
                            .form-group
                                //label.control-label.col-md-3.hidden-xs Password
                                .col-xs-6.col-xs-offset-3
                                    input.form-control(type='password', name='password', tabindex="2",ng-model="user.password", placeholder="Password")
                            .btn-group-vertical(style='margin-top:20px')
                                input.btn.btn-default.btn-lg(type='submit', value="Login") Login
        .swiper-slide
            .swiper-inner
                .container-fluid
                    //.row(style='margin-bottom: 30px')
                        .col-xs-8.col-xs-offset-2.col-md-4.col-md-offset-4
                            img.img-responsive(src='/css/win-white.png' )
                    .row
                        form.form-horizontal(style="text-align: center",ng-submit='createUser()', role='form')
                            .form-group
                                label.control-label.col-md-3.hidden-xs Username
                                .col-xs-10.col-xs-offset-1.col-md-5
                                    input.form-control(type='text', name='username', ng-model="newUser.username", placeholder="Username", id='user-username')
                            .form-group
                                label.control-label.col-md-3.hidden-xs PseudoFb
                                .col-xs-10.col-xs-offset-1.col-md-5
                                    input.form-control(type='text', name='pseudoFb', ng-model="newUser.pseudoFb", placeholder="pseudoFb")
                            .form-group
                                label.control-label.col-md-3.hidden-xs Password
                                .col-xs-10.col-xs-offset-1.col-md-5
                                    input.form-control(type='password', name='password', ng-model="newUser.password", placeholder="Password")
                            .form-group
                                label.control-label.col-md-3.hidden-xs Password Confirmation
                                .col-xs-10.col-xs-offset-1.col-md-5
                                    input.form-control(type='password', name='passwordConfirmation', ng-model="newUser.passwordConfirmation", placeholder="Password Confirmation")
                            .btn-group-vertical(style='margin-top:20px')
                                input.btn.btn-default.btn-lg(type='submit', value="Register") Register